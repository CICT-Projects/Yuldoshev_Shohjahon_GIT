@model IEnumerable<backend.Models.Bolt>
<!doctype html>
<html><head><meta charset="utf-8" /><title>Bolt List</title></head>
<body>
  <h1>Bolts</h1>
  <p><a href="/bolt-ui/create">Create New</a></p>
  <table>
    <thead><tr><th>ID</th><th>Name</th><th>Brand</th><th>Actions</th></tr></thead>
    <tbody>
    @foreach(var b in Model) {
      <tr>
        <td>@b.Id</td>
        <td>@b.Name</td>
        <td>@b.Brand</td>
        <td><a href="/bolt-ui/edit/@b.Id">Edit</a> | <a href="/bolt-ui/delete/@b.Id">Delete</a></td>
      </tr>
    }
    </tbody>
  </table>
</body></html>
