@model IEnumerable<backend.Models.Part>
<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Parts - List</title>
</head>
<body>
  <h1>Parts</h1>
  <p><a href="/parts-ui/create">Create new part</a></p>
  <table border="1" cellpadding="6" cellspacing="0">
    <thead><tr><th>Id</th><th>Name</th><th>Category</th><th>Price</th><th>Actions</th></tr></thead>
    <tbody>
    @foreach(var p in Model) {
      <tr>
        <td>@p.Id</td>
        <td>@p.Name</td>
        <td>@p.Category</td>
        <td>@String.Format("{0:0.00}", p.Price)</td>
        <td>
          <a href="/parts-ui/edit/@p.Id">Edit</a> |
          <a href="/parts-ui/delete/@p.Id">Delete</a>
        </td>
      </tr>
    }
    </tbody>
  </table>
</body>
</html>
