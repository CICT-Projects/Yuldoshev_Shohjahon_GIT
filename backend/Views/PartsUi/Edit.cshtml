@model backend.Models.Part
<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Edit Part</title>
</head>
<body>
  <h1>Edit Part</h1>
  <form method="post" action="/parts-ui/edit/@Model.Id">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Id" value="@Model.Id" />
    <label>Name: <input name="Name" value="@Model.Name" required /></label><br/>
    <label>Category: <input name="Category" value="@Model.Category" required /></label><br/>
    <label>Price: <input name="Price" type="number" step="0.01" value="@Model.Price" /></label><br/>
    <button type="submit">Save</button>
    <a href="/parts-ui">Cancel</a>
  </form>
</body>
</html>
